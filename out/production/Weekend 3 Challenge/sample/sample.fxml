<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <Text text = "         Hello"
          fx:id="Hello"
          GridPane.rowIndex="0"></Text>

    <Text text=""
          fx:id="answerText"
          GridPane.rowIndex="1"></Text>

    <TextField text="Name"
               fx:id="userName"
               GridPane.rowIndex="2"
               GridPane.columnIndex="0"></TextField>

    <TextField text="Age"
               fx:id="userAge"
               GridPane.rowIndex="3"
               GridPane.columnIndex="0"></TextField>

    <TextField text="Year"
               fx:id="userYear"
               GridPane.rowIndex="5"
               GridPane.columnIndex="0"></TextField>

    <Button text="Submit"
            fx:id="submitButton"
            onAction="#clickSubmit"
            GridPane.rowIndex="6"
            GridPane.columnIndex="1"></Button>

    <Text text=" "
          fx:id="OutPutName"
          GridPane.rowIndex="7"></Text>

    <Text text=" "
          fx:id="OutPutAgeOneYear"
          GridPane.rowIndex="8"></Text>

    <Text text=" "
          fx:id="OutPutAgeFiveYear"
          GridPane.rowIndex="9"></Text>

    <Text text=" "
          fx:id="OutPutAgeTenYear"
          GridPane.rowIndex="10"></Text>

    <Button text="Reset"
            fx:id="resetButton"
            onAction="#clickedReset"
            GridPane.rowIndex="11"
            GridPane.columnIndex="1"></Button>


</GridPane>