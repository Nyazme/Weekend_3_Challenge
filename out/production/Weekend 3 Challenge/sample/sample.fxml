<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <Text text = "                                      Hello"
          fx:id="Hello"
          GridPane.rowIndex="0"></Text>

    <Text text="Please enter name, age, current year"
          fx:id="answerText"
          GridPane.rowIndex="1"></Text>

    <Label text="Enter Name, Age, Current Year"
           fx:id="enterText"
           GridPane.rowIndex="2"></Label>


    <TextField text=""
               fx:id="userInput"
               GridPane.rowIndex="3"
               GridPane.columnIndex="0"></TextField>

    <Button text="Submit"
            fx:id="submitButton"
            onAction="#clickTheButton"
            GridPane.rowIndex="3"
            GridPane.columnIndex="1"></Button>

    <Text text="Confirm"
          fx:id="confirmText"
          GridPane.rowIndex="4"></Text>



</GridPane>